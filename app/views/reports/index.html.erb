<h3>Reports</h3>
<hr />
<table class="table table-striped">
  <thead>
    <tr>
      <th>Report Name</th>
      <th>From </th>
      <th>To</th>
      <th>URL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Customers With Total Purchase Amount</td>
      <td></td>
      <td></td>
      <td><a href="<%= customers_path(:format => 'csv')%>">Download Customers</a></td>
    </tr>
    <tr>
      <td>All Transactions</td>
      <td> From: <input type="date" class="form-control rcontrol typeahead download-transactions-from-date"/></td>
      <td> To : <input type="date" class="form-control rcontrol typeahead download-transactions-to-date" /></td>
      <td><a href="#" onclick='return checkDate("download-transactions", "transactions_download")'>Download Transactions</a></td>
    </tr>
    <tr>
      <td>All Purchases</td>
      <td> From: <input type="date" class="form-control rcontrol typeahead download-all-purchase-from-date"/></td>
      <td> To : <input type="date" class="form-control rcontrol typeahead download-all-purchase-to-date" /></td>
      <td><a href="#" onclick='return checkDate("download-all-purchase", "transaction_items_download")' >Download Purchases</a></td>
    </tr>
    <!--<tr>-->
      <!--<td>All Coupons</td>-->
      <!--<td><a href="<%= vouchers_path(:format => 'csv')%>">Download Coupons</a></td>-->
    <!--</tr>-->
  </tbody>
</table>

<h3 style="margin-top:30px;">Statistics</h3>
<hr />
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Transactions Today</td>
      <td><%= @no_of_transactions%></td>
    </tr>
    <tr>
      <td>Coupons Issued Today</td>
      <td><%= @no_of_coupons%></td>
    </tr>
    <tr>
      <td>Total Purchase Amount Today</td>
      <td><%= @total_amount%></td>
    </tr>
  </tbody>
</table>


<script>
   function checkDate(val, download){
       fromdate = val + "-from-date"
       todate = val + "-to-date"
       if($("."+fromdate).val().length <=0){
          alert("select from date");
           return false;
       } else if($("."+todate).val().length <=0){
           alert("select to date");
           return false;
       } else {
           window.location.href =  window.location.protocol + "//" + window.location.host + "/"+ download +"/" +
               $("."+fromdate).val()+ "/" +$("."+todate).val() + "?target=_blank";
       }
    }
</script>
