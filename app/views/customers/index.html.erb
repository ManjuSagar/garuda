
<form class="form-horizontal customer-form customer-page" role="form">
  <div class="form-group">
    <label for="Mobile" class="col-sm-2 control-label">Customer Mobile</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" id="Mobile" name="Mobile" placeholder="Mobile Number"/>
    </div>
    <div class="col-sm-3">
      <button id="GetCustomer" class="btn btn-large btn-primary ccontrol" type="button">Get Customer Info</button>
    </div>
  </div>
</form>   
<br/>
<br/>

<div class="row">
  <%= form_tag('/customers') do %>
      <div class="col-xs-2">
        <div class="input-group">
          <%= date_field_tag(:filtered_date, @selectedDate, :html=>{:class => "form-control rcontrol typeahead"} ) %>
        </div>
      </div>
      <div class="col-sm-3">
         <%= submit_tag 'Get Customers', :class=> "btn btn-large btn-primary ccontrol" %>
      </div>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Mobile</th>
      <th>Coupon Amount</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @filteredCustomers.sort_by {|c| c.total_spent(@selectedDate)}.reverse.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to c.name, customer_path(c.mobile), :format => 'html'%></td>
      <td><%= c.mobile%></td>
      <td><%= c.coupon_amount(@selectedDate)%></td>
      <td><%= c.total_spent(@selectedDate)%></td>
    </tr>
    <%end%>
  </tbody>
</table>

